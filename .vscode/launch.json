{
    "version": "0.2.0",
    "configurations": [{
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceRoot}",
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        },
        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/build/server.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "default",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "socket.io*"
                // "SOCKET": "CLIENT"
            },
            "console": "internalConsole",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/build/**/*.js"
            ]
        },
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "launch",
            "firefoxArgs": [
                "-start-debugger-server",
                "-no-remote"
            ],
            "url": "http://localhost:8000/",
            "webRoot": "${workspaceRoot}"
        }
    ],
    "compounds": [{
        "name": "Compound",
        "configurations": [
            "Launch Server",
            "Launch Firefox"
        ]
    }]
}